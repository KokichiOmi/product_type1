<%= form_with(model: Comment.new, local: true) do |form| %>

  <div class="field">
    <%= form.hidden_field :user_id %>
  </div>

  <div class="field">
    <%= form.hidden_field :post_id %>   
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :comment_body %>
  </div>

  <div class="actions">
    <%= form.submit :コメント, method: :post, class: 'btn btn-primary' %>
  </div>
<% end %>
